@model GondolinWeb.Areas.Application.Models.TaskCategory
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
@*
This view was created by the .net templates. Information shown may need to be
adjusted or removed at during a future task.
*@

<h1>Delete Confirmation</h1>

<h3 class="text-center">Are you sure you want to delete this Category?</h3>
<div class="m-auto w-50 delete-table">
    <dl class="row">
        <dt class="col-sm-4 ps-4">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10 ps-5">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
    
    <form asp-action="DeleteCategory">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
                <a class="btn btn-warning" asp-controller="Tasks" asp-action="Index">Cancel <i class="bi bi-exclamation-diamond" data-bs-toggle="tooltip" data-bs-placement="right" title="Will not delete Category. Return to Task List."></i></a>
    </form>
</div>
