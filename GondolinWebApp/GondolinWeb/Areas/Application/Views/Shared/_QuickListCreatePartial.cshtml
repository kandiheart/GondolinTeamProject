@model GondolinWeb.Areas.Application.Models.Task
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers



<form id="QuickCreate" asp-action="QuickCreate" asp-controller="Home" autocomplete="off">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-3">
            <div>
                <input asp-for="Name" class="form-control" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div id="quicklist-description" class="col-6">
            <div>
                <textarea asp-for="Description" class="form-control" rows="1"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        <div class="col-2 mt-1 ms-2">
            <div>
                <input type="submit" value="New QuickTask" class="btn btn-sm btn-color" />
            </div>
        </div>
    </div>
</form>