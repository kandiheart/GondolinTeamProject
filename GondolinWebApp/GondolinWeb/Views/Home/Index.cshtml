@using GondolinWeb.Areas.Identity.Data
@using Microsoft.AspNetCore.Identity
@{
    ViewData["Title"] = "Home Page";
}

@inject SignInManager<ApplicationUser> SignInManager

<head>
<link rel="stylesheet" href="~/css/SplashPage.css" asp-append-version="true" />
</head>

<!--Rotating Ball-->
<section class="stage">
    <figure class="ball"><span class="shadow"></span></figure>
</section>

<!--Splash Page Welcome Text-->
<div class="splash text-center">
    <h2 class="display-5">Welcome to</h2>
    <div class="site-name site-name-body">GondolinWeb</div>
    <h1 class="p-2">YOUR SOURCE for <strong>Project Management</strong> and <strong>Task Tracking</strong> since 2022!</h1>
</div>

<!-- Splash Page Visitor Buttons -->
@if (!SignInManager.IsSignedIn(User))
{
    <hr /><br />
    <h3 class="text-center">Use the buttons below to <strong>Log In</strong> or <strong>Register</strong> for our <strong>To-Do Application</strong>, or to <strong>Meet our Team</strong></h3>
    <div class="fancy-buttons text-center">
        <div class="btn"><a id="register" asp-area="Identity" asp-page="/Account/Register">Register</a></div>
        <div class="btn"><a id="login" asp-area="Identity" asp-page="/Account/Login">Login</a></div>
        <div class="btn"><a id="team" asp-area="" asp-controller="Home" asp-action="Team">Meet Our Team</a></div>
    </div>
}

<!-- Ripples -->

<section class="ripples">
    <div class="circle xlarge shade1"></div>
    <div class="circle large shade2"></div>
    <div class="circle medium shade3"></div>
    <div class="circle small shade4"></div>
</section>

<!--Rotating Pyramid-->
<section class="pyramid">
    <div class="side left"></div>
    <div class="side front"></div>
    <div class="side right"></div>
    <div class="side back"></div>
</section>

